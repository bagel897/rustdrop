{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/target/debug/rustdrop"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rustdrop'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustdrop",
                    "--package=rustdrop"
                ],
                "filter": {
                    "name": "rustdrop",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rustdrop' (client)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustdrop",
                    "--package=rustdrop"
                ],
                "filter": {
                    "name": "rustdrop",
                    "kind": "bin"
                }
            },
            "args": [
                "--client"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rustdrop'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rustdrop",
                    "--package=rustdrop"
                ],
                "filter": {
                    "name": "rustdrop",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}